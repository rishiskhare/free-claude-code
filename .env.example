# ============================================================
# Paste your NVIDIA API key here (required for NVIDIA NIM)
# Get one free at: https://build.nvidia.com/settings/api-keys
# ============================================================
NVIDIA_NIM_API_KEY=""


# ==============================
# PROVIDER SELECTION
# ==============================
# Valid: "nvidia_nim" | "open_router" | "lmstudio"
PROVIDER_TYPE=nvidia_nim


# ==============================
# MODEL CONFIG
# ==============================
MODEL="stepfun-ai/step-3.5-flash"


# ==============================
# PROVIDER-SPECIFIC CONFIG
# ==============================

# --- OpenRouter (optional - only if PROVIDER_TYPE=open_router) ---
OPENROUTER_API_KEY=""

# --- LM Studio (optional - only if PROVIDER_TYPE=lmstudio) ---
LM_STUDIO_BASE_URL="http://localhost:1234/v1"

# --- Provider Rate Limiting (applies to all providers) ---
PROVIDER_RATE_LIMIT=40
PROVIDER_RATE_WINDOW=60


# ==============================
# MESSAGING PLATFORM
# ==============================
# Valid: "discord" | "telegram"
MESSAGING_PLATFORM=telegram

# Provider-agnostic rate limiting for messaging
MESSAGING_RATE_LIMIT=40
MESSAGING_RATE_WINDOW=1


# ==============================
# TELEGRAM CONFIG (optional)
# ==============================
TELEGRAM_BOT_TOKEN=""
ALLOWED_TELEGRAM_USER_ID=""


# ==============================
# DISCORD CONFIG (optional)
# ==============================
DISCORD_BOT_TOKEN=""
ALLOWED_DISCORD_CHANNELS=""


# ==============================
# AGENT CONFIG
# ==============================
CLAUDE_WORKSPACE="./agent_workspace"
MAX_CLI_SESSIONS=10
ALLOWED_DIR=""

# Optimizations
FAST_PREFIX_DETECTION=true
ENABLE_NETWORK_PROBE_MOCK=true
ENABLE_TITLE_GENERATION_SKIP=true
ENABLE_SUGGESTION_MODE_SKIP=true
ENABLE_FILEPATH_EXTRACTION_MOCK=true


# ==============================
# NVIDIA NIM ADVANCED SETTINGS
# ==============================
# Base URL is fixed to https://integrate.api.nvidia.com/v1
# All NVIDIA_NIM_* settings are strictly validated (unknown keys will error).

NVIDIA_NIM_TEMPERATURE=1.0
NVIDIA_NIM_TOP_P=1.0
NVIDIA_NIM_TOP_K=-1
NVIDIA_NIM_MAX_TOKENS=81920
NVIDIA_NIM_PRESENCE_PENALTY=0.0
NVIDIA_NIM_FREQUENCY_PENALTY=0.0
NVIDIA_NIM_MIN_P=0.0
NVIDIA_NIM_REPETITION_PENALTY=1.0
NVIDIA_NIM_SEED=
NVIDIA_NIM_STOP=
NVIDIA_NIM_PARALLEL_TOOL_CALLS=true
NVIDIA_NIM_RETURN_TOKENS_AS_TOKEN_IDS=false
NVIDIA_NIM_INCLUDE_STOP_STR_IN_OUTPUT=false
NVIDIA_NIM_IGNORE_EOS=false
NVIDIA_NIM_MIN_TOKENS=0
NVIDIA_NIM_CHAT_TEMPLATE=""
NVIDIA_NIM_REQUEST_ID=""
NVIDIA_NIM_REASONING_EFFORT=high
NVIDIA_NIM_INCLUDE_REASONING=true
